                }
            ]
        },
        {
            "@entity name": "comment",
            "fields": [
                {
                    "@field name": "comment id",
                    "type": "UniqueIdentifier",
                    "read only": true
                },
                {
                    "@field name": "comment text",
                    "type": "text"
                }
            ],
            "belongsto": [
                {
                    "@entity name": "post"
                }
            ]
        }
    ],
    "test_conditionals": [
        {
            "name": "if",
            "a": true,
            "b": true,
            "c": true
        },
        {
            "name": "elseif",
            "a": true,
            "b": false,
            "c": false
        },
        {
            "name": "else",
            "a": false,
            "b": false,
            "c": false
        }
    ]
