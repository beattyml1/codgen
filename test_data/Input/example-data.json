                },
                {
                    "@field name": "post title",
                    "type": "varchar(200)",
                    "$required": true,
                    "hasMaxLength": true,
                    "maxLength": "200"
                },
                {
                    "@field name": "post text",
                    "type": "text"
                }
            ],
            "hasmany": [
